{
  "compilerOptions": {
      "target": "ES6",
      "skipLibCheck": true,
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "noEmit": true,
      "baseUrl": ".",
      "paths": {
          "@app/*": [
              "./src/*"
          ]
      },
      "emitDecoratorMetadata": true,
      "strict": true
  },
  "exclude": ["node_modules"]
}
